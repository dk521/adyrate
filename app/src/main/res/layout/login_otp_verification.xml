<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".activity.LoginActivty">
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Adyrate"
        android:textColor="@color/blue_700"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/Login_header"/>

    <LinearLayout
        android:id="@+id/Login_header"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We sent you a code."
            android:textColor="@color/black_1000"
            android:textSize="20sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="15dp"

                android:layout_height="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
                android:text="@string/otp_txt"
                android:textColor="@color/grey_500"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Resend in 00:30sec"
            android:textColor="@color/grey_500"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_number_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Login_header">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:ems="1"
            android:inputType="number"
            android:focusableInTouchMode="true"
            android:focusedByDefault="true"
            android:background="@drawable/login_number_background"
            android:enabled="true"
            android:gravity="center"
            android:textColor="@color/black_1000" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_number_background"
            android:enabled="true"
            android:gravity="center"
            android:textColor="@color/black_1000" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_number_background"
            android:enabled="true"
            android:gravity="center"
            android:textColor="@color/black_1000" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_number_background"
            android:enabled="true"
            android:gravity="center"
            android:textColor="@color/black_1000" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_number_background"
            android:enabled="true"
            android:gravity="center"
            android:textColor="@color/black_1000" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_number_background"
            android:enabled="true"
            android:gravity="center"
            android:textColor="@color/black_1000" />




    </LinearLayout>

    <Button
        android:id="@+id/button_verify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/blue_500"
        android:text="Verify"
        android:textColor="@color/white_1000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/login_number_container" />

</android.support.constraint.ConstraintLayout>